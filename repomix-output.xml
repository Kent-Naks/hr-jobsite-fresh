            />
          </div>

          <div className="mt-2 text-xs text-gray-300">Tip: use a professional email (e.g. jane.doe@example.com).</div>
        </section>

        {/* Documents */}
        <section className={sectionClass}>
          <div className="flex items-start justify-between">

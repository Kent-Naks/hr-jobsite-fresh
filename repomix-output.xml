    shortLabel: "X",
    color: "#ffffff",
    bg: "rgba(255,255,255,0.10)",
    border: "rgba(255,255,255,0.25)",
    Icon: XIcon,
    getHref: (title, url) =>
      `https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(url)}`,
    isNewTab: true,
  },
  {
    id: "instagram",
    label: "Share on Instagram",

// frontend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")              // pooled via Neon PgBouncer
  directUrl = env("DIRECT_URL")     // direct for migrations/admin
}

model Category {
  id            Int            @id @default(autoincrement())
  slug          String         @unique
  label         String
  CategoryCount CategoryCount?
  jobs          Job[]
}

model Job {
  id                  String   @id @default(cuid())
  title               String
  description         String
  categoryId          Int
  category            Category @relation(fields: [categoryId], references: [id])
  salaryMin           Int?
  salaryMax           Int?
  currency            String?  @default("KES")
  requireCV           Boolean  @default(false)
  requireCoverLetter  Boolean  @default(false)
  questions           Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  publishedAt         DateTime?
  expiresAt           DateTime?
  status              String   @default("draft") // draft | published | archived

  @@index([categoryId])
  @@index([status, publishedAt])
  @@index([status, expiresAt])
}

model AnalyticsEvent {
  id         String   @id @default(cuid())
  sessionId  String
  type       String   // "pageview" | "ping" | "unload"
  path       String?
  referrer   String?
  userAgent  String?
  ip         String?
  country    String?
  deviceType String?
  createdAt  DateTime @default(now())

  @@index([sessionId])
  @@index([createdAt])
}

model CategoryCount {
  id         Int      @id @default(autoincrement())
  categoryId Int      @unique
  count      Int      @default(0)
  updatedAt  DateTime @default(now()) @db.Timestamp(6)
  Category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

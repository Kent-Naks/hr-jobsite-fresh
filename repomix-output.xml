from flask import Flask, jsonify, request
from flask_cors import CORS
from flask_restx import Api, Resource

app = Flask(__name__)
CORS(app)

# ‚îÄ‚îÄ‚îÄ Setup Swagger / OpenAPI via Flask-RESTX ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
api = Api(
    app,
    version="1.0",
    title="HR Jobsite API",
    description="Interactive API docs for your job listings",
    doc="/docs"             # ‚Üê swagger-ui at http://localhost:8000/docs
)

ns = api.namespace("jobs", description="Job operations")

# ‚îÄ‚îÄ‚îÄ Sample job data ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
jobs = [
    {
        "id": 1,
        "title": "Administrative Assistant",
        "description": "Responsible for managing office tasks and communications."
    },
    {
        "id": 2,
        "title": "Software Developer",
        "description": "Develop and maintain web applications."
    }
]

# ‚îÄ‚îÄ‚îÄ Jobs list & filter ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
@ns.route("/")
class JobsList(Resource):
    def get(self):
        """List all jobs, or filter by ?search=term"""
        search = request.args.get("search", "").lower()
        if search:
            return [j for j in jobs if search in j["title"].lower()]
        return jobs

# ‚îÄ‚îÄ‚îÄ Single job by ID ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
@ns.route("/<int:job_id>")
class JobItem(Resource):
    def get(self, job_id):
        """Fetch a single job by its ID"""
        for j in jobs:
            if j["id"] == job_id:
                return j
        api.abort(404, "Job not found")

# ‚îÄ‚îÄ‚îÄ Health check for uptime probes ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
@app.route("/health", methods=["GET"])
def health():
    """Simple health check endpoint"""
    return jsonify({"status": "ok"}), 200

# ‚îÄ‚îÄ‚îÄ (Optional) Root route for Render or sanity check ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
@app.route("/", methods=["GET"])
def home():
    return jsonify({"message": "HR Jobsite backend is running!"})

# ‚îÄ‚îÄ‚îÄ Launch via Flask CLI in dev, or via Gunicorn in Docker ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
if __name__ == "__main__":
    app.run(debug=True)
